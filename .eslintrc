{
    "env": {
        "es2019": true,
        "node": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-useless-constructor": "off"
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx" ],
            "rules": {
                "@typescript-eslint/explicit-member-accessibility": ["error"]
            }
        }
    ]
}
